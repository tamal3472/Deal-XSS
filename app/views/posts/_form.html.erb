<%= form_with(model: post, local: true, class: "post-form") do |form| %>
  <% if post.errors.any? %>
    <div class="error-alert">
      <div class="error-header">
        <svg width="20" height="20" class="error-icon" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
        </svg>
        <h3><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h3>
      </div>
      <ul class="error-list">
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title, class: "form-label" do %>
      <svg width="16" height="16" class="label-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
      </svg>
      Title
    <% end %>
    <%= form.text_field :title, class: "form-input", placeholder: "Enter your post title..." %>
  </div>

  <div class="form-group">
    <%= form.label :body, class: "form-label" do %>
      <svg width="16" height="16" class="label-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
      </svg>
      Content
    <% end %>
    <%= form.text_area :body, class: "form-textarea", rows: 8, placeholder: "Write your post content here..." %>
  </div>

  <div class="form-actions">
    <%= form.submit class: "btn-primary btn-submit" do %>
      <svg width="16" height="16" class="icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
      </svg>
    <% end %>
  </div>
<% end %>
