<% content_for :title, "Editing post" %>

<div class="posts-container">
  <div class="content-wrapper">
    <!-- Header Section -->
    <div class="header-section">
      <div class="header-content">
        <h1>Edit Post</h1>
        <p>Update your post content</p>
      </div>
    </div>

    <!-- Form Card -->
    <div class="form-card">
      <%= render "form", post: @post %>
    </div>

    <!-- Navigation Actions -->
    <div class="navigation-actions">
      <%= link_to @post, class: "btn-secondary" do %>
        <svg width="16" height="16" class="icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
        </svg>
        View Post
      <% end %>
      
      <%= link_to posts_path, class: "btn-outline" do %>
        <svg width="16" height="16" class="icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Back to Posts
      <% end %>
    </div>
  </div>
</div>
